<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Configuración de fuentes de paquetes NuGet -->
  <packageSources>
    <clear />
    <!-- Fuente oficial de NuGet -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />

    <!-- Ejemplo: Fuente privada o corporativa (comentado por defecto) -->
    <!-- <add key="CompanyFeed" value="https://pkgs.dev.azure.com/company/_packaging/feed/nuget/v3/index.json" /> -->
  </packageSources>

  <!-- Configuración de mapeo de fuentes (opcional) -->
  <packageSourceMapping>
    <!-- Todos los paquetes de Microsoft.* y System.* vienen de nuget.org -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>

  <!-- Configuración de credenciales (no guardar contraseñas aquí en producción) -->
  <!-- Use el comando: dotnet nuget add source <url> -name <name> -username <user> -password <pass> -->

  <!-- Configuración de restore -->
  <config>
    <!-- Restaurar paquetes automáticamente durante el build -->
    <add key="dependencyVersion" value="Highest" />
  </config>

  <!-- Deshabilitar fuentes por defecto si no son necesarias -->
  <disabledPackageSources>
    <!-- <add key="Microsoft Visual Studio Offline Packages" value="true" /> -->
  </disabledPackageSources>

</configuration>
