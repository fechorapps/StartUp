# DoorX Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# Database Configuration
# ===========================================
DATABASE_CONNECTION_STRING=Host=postgres;Port=5432;Database=doorx_dev;Username=doorx;Password=doorx_dev_password
POSTGRES_PASSWORD=doorx_dev_password

# ===========================================
# OpenAI Configuration
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_ASSISTANT_ID=asst_your_assistant_id_here

# ===========================================
# Twilio Configuration
# ===========================================
# Get your credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ===========================================
# Property Management System Integrations
# ===========================================

# Buildium
BUILDIUM_CLIENT_ID=your_buildium_client_id
BUILDIUM_CLIENT_SECRET=your_buildium_client_secret
BUILDIUM_API_URL=https://api.buildium.com

# Hostify
HOSTIFY_API_KEY=your_hostify_api_key
HOSTIFY_API_URL=https://api.hostify.com

# AppFolio
APPFOLIO_CLIENT_ID=your_appfolio_client_id
APPFOLIO_CLIENT_SECRET=your_appfolio_client_secret
APPFOLIO_API_URL=https://api.appfolio.com

# ===========================================
# Application Configuration
# ===========================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=DoorX
JWT_AUDIENCE=DoorX.API
JWT_EXPIRATION_MINUTES=60

# ===========================================
# Logging & Monitoring
# ===========================================
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Sentry (Optional)
SENTRY_DSN=

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@doorx.app
SMTP_FROM_NAME=DoorX

# ===========================================
# Storage Configuration (Optional)
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=us-east-1

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=

# ===========================================
# Redis Cache (Optional)
# ===========================================
REDIS_CONNECTION_STRING=localhost:6379

# ===========================================
# Feature Flags (Optional)
# ===========================================
FEATURE_AI_ASSISTANT_ENABLED=true
FEATURE_TWILIO_SMS_ENABLED=true
FEATURE_WHATSAPP_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS_ENABLED=false

# ===========================================
# Development Tools
# ===========================================
# Swagger
ENABLE_SWAGGER=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:4200,http://localhost:5000

# ===========================================
# CI/CD & GitHub Actions
# ===========================================
# These are set automatically by GitHub Actions
# Listed here for reference only
# CI=true
# GITHUB_TOKEN=
# GITHUB_REPOSITORY=
# GITHUB_SHA=
